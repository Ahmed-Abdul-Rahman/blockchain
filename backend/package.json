{
  "name": "blockchain",
  "version": "1.0.0",
  "description": "Blockchain Implementation",
  "main": "build/src/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias --resolve-full-paths",
    "start": "node build/src/index.js",
    "dev": "nodemon --exec tsx -r tsconfig-paths/register src/index.ts",
    "node_1": "nodemon --exec tsx -r tsconfig-paths/register src/index.ts 3001 http://localhost:3001",
    "node_2": "nodemon --exec tsx -r tsconfig-paths/register src/index.ts 3002 http://localhost:3002",
    "node_3": "nodemon --exec tsx -r tsconfig-paths/register src/index.ts 3003 http://localhost:3003",
    "node_4": "nodemon --exec tsx -r tsconfig-paths/register src/index.ts 3004 http://localhost:3004",
    "node_5": "nodemon --exec tsx -r tsconfig-paths/register src/index.ts 3005 http://localhost:3005",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . ",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\""
  },
  "author": "Ahmed Abdul Rahman",
  "license": "ISC",
  "nodemonConfig": {
    "ignore": [
      "**/test/**",
      "**/docs/**",
      "node_modules/**/node_modules"
    ],
    "watch": [
      "src",
      "packages"
    ],
    "ext": "ts"
  },
  "dependencies": {
    "@chainsafe/libp2p-noise": "^16.0.1",
    "@chainsafe/libp2p-yamux": "^7.0.1",
    "@libp2p/mdns": "^11.0.17",
    "@libp2p/tcp": "^10.0.15",
    "axios": "^1.7.9",
    "body-parser": "^1.20.3",
    "eventid": "^2.0.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "it-length-prefixed": "^9.1.1",
    "it-map": "^3.1.1",
    "it-pipe": "^3.0.1",
    "libp2p": "^2.5.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.8.1",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "9.19.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "3.7.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^17.10.2",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "nodemon": "^3.1.9",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
